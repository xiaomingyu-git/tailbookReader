{
  "name": "bookreader",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite --port 7999",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-debug": "cross-env NODE_ENV=development electron . --inspect=5858",
    "start": "npm run build && npm run electron",
    "kill-port": "npx kill-port 7999",
    "app": "npm run kill-port && concurrently \"npm run dev\" \"wait-on http://localhost:7999 && npm run electron-dev\"",
    "debug": "npm run kill-port && concurrently \"npm run dev\" \"wait-on http://localhost:7999 && npm run electron-debug\"",
    "pack": "npm run build && electron-builder --dir -w",
    "dist": "npm run build && electron-builder -w",
    "dist:win": "npm run build && electron-builder --win nsis"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tanstack/react-router": "^1.131.31",
    "epub2": "^3.0.2",
    "iconv-lite": "^0.7.0",
    "jschardet": "^3.1.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "webdav": "^5.8.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "kill-port": "^2.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.tailbook.reader",
    "productName": "Tailbook Reader",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "main.js",
      "preload.js",
      "package.json",
      "local-settings.json"
    ],
    "extraResources": [
      {
        "from": "book",
        "to": "book",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Tailbook Reader"
    }
  }
}
